{
  "name": "Gosl",
  "image": "gosl/gosl",
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash",
    "go.useGoProxyToCheckForToolUpdates": false,
    "go.useLanguageServer": true,
    "go.gopath": "/go",
    "go.goroot": "/usr/local/go",
    "go.toolsGopath": "/go/bin"
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],
  "extensions": [
    "golang.Go"
  ],
  "forwardPorts": [
    9000
  ],
  "remoteUser": "vscode"
}
